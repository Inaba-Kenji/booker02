
<div class="body">
  <div class="container">
    <p id="notice"></p>
	<div class="row">
    <div class="col-md-6 col-md-offset-3">
    <h1>Editing Book</h1>

    <!--バリデーションのエラ〜メッセージ-->
    <div id="error_explanation">
     <% if @book.errors.any? %>
      <h3>2 errors prohibited this obj from being saved:</h3>

        <ul>
          <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
        </ul>
      <% end %>
    </div>

	<%= form_with model:@book, local:true do |f| %>
  <div class="field row">
    <div class="field_with_errors"><label for="book_title">Title</label></div>
     <div><%= f.text_field :title, class: 'col-xs-12 book_title' %></div>
  </div>

  <div class="field row">
    <label for="book_opinion">Opinion</label>
    <div><%= f.text_area :body, class: 'col-xs-12 book_body' %></div>
  </div>

  <div class="actions row">
    <%= f.submit('Update Book',class: 'btn btn-primary col-xs-12') %>
  </div>
  <% end %>

  <div><%= link_to 'Show', book_path(@book.id) %></div>
  <div><%= link_to 'Back', books_path %></div><br>
  </div>
  <div class="col-md-3"></div>
</div>
</div>
</div>