<!--User_infoフォーム-->
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-3">
<!--User infoの部分-->
<%= form_with model:@user, local:true do |f| %>
      <h2>User info</h2>
         <table class="table">
             <tbody>
              <tr>

            	  <th></th>
              </tr>
              <tr>
            	  <th>Title</th>
            	  <th><%= @book.title %></th>
              </tr>
              <tr>
            	  <th>Opinion</th>
            	  <th><%= @book.body %></th>
              </tr>
            </table>
<% end %>
  <!--NewBook　新規投稿フォーム-->
    <h2>New book</h2>
    <%= form_with model:@book, local:true do |f| %>

    <!--バリデーションのエラーメッセージ-->
    <% if @book.errors.any? %>
    <h3>2 errors prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
     <% end %>

    <label>Title</label><br>
    <%= f.text_field :title %><br>

    <label>Opinion</label><br>
    <%= f.text_area :body %><br>
    <%= f.submit('Create Book',class: 'btn btn-primary') %>
    <% end %>

    </div>




<div class="col-xs-9">
    <!--Usrs 投稿一覧表示-->
    <h1>Books</h1>
    <!--テーブル-->
    <table>
        <!--テーブルのタイトル部分-->
        <thead>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th></th>
            </tr>
        </thead>
        <!--テーブルのデータ部分-->
    <% @books.each do |book| %>
        <tbody>
            <tr>
                <td><%= link_to "book.title", book_path(book.id) %></td>
                <td><%= book.body %></td>
            </tr>
        </tbody>
    <% end %>
    </table>
  </div>
</div>